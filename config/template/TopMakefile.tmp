#####################################################################################
#
# A top Makefile for building my project.
# One needs to define $FOOLIGHT_BASEDIR to build the sub directories.
#
#####################################################################################
#
# IMPOSE CONDITION BETWEEN FOOLIGHT_BASEDIR & PWD =>
#   do not compile if PWD !=$FOOLIGHT_BASEDIR is set elsewhere
#
ifndef FOOLIGHT_BASEDIR
 FOOLIGHT_BASEDIR := $(shell cd . && pwd -P)
endif
NORMALIZED_FOOLIGHT_BASEDIR := $(shell cd ${FOOLIGHT_BASEDIR} && pwd -P)
ifneq ($(NORMALIZED_FOOLIGHT_BASEDIR), $(shell cd . && pwd -P))
 ifneq ($(wildcard ./PMTDecoder/*),)
ERROR_MESSAGE := $(error Your source code detected in current dir, but FOOLIGHT_BASEDIR is not current dir.  \
   To avoid recompiling the wrong installation,\
   FOOLIGHT_BASEDIR must be set to the current directory when making.  \
   Currently it is set to ${FOOLIGHT_BASEDIR} [$(NORMALIZED_FOOLIGHT_BASEDIR)].  \
   Current directory is $(shell pwd).)
 endif
endif
export FOOLIGHT_BASEDIR

all:
	@mkdir -p $(FOOLIGHT_BASEDIR)/lib
	@echo "Start building core"
	@make --directory=$(FOOLIGHT_COREDIR)
	@echo
	@echo "Start building UserDev"
	@make --directory=$(FOOLIGHT_USERDEVDIR)
	@echo 
	@echo "Start building main"
	@make --directory=$(FOOLIGHT_BASEDIR)/main
	@echo 
	@echo "Exiting"

clean:
	@echo "Cleaning core"
	@make clean --directory=$(FOOLIGHT_COREDIR)
	@echo
	@echo "Cleaning UserDev"
	@make clean --directory=$(FOOLIGHT_USERDEVDIR)
	@echo
	@echo "Cleaning main"
	@make clean --directory=$(FOOLIGHT_BASEDIR)/main
	@echo
	@echo "Exiting"

#####################################################################################
#
# DOCUMENTATION...
#
doxygen:
	@echo 'dOxygenising your code...'
	@doxygen $(FOOLIGHT_BASEDIR)/doc/doxygenMyProject.script

doxygen+:
	@echo 'dOxygenising MyProject + local-ROOT...'
	@doxygen $(FOOLIGHT_BASEDIR)/doc/doxygenMyProject+.script
#
#####################################################################################
